<!-- Tasks information MODAL -->
<div class="modal fade" id="task-<%= task.id %>-info-modal" tabindex="-1" role="dialog" aria-labelledby="modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <span class="title"><b><%= task.name %></b></span>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class="task-owner">
          <div class="text-label">Creator</div>
          <div><%= task.user.name %></div>
        </div>
        <div class="task-start-date">
          <div class="text-label">Start date</div>
          <div><%= task.start_date.strftime("%Y年%m月%d日") %></div>
        </div>
        <div class="task-due-date">
          <div class="text-label">Due date</div>
          <div><%= task.due_date.strftime("%Y年%m月%d日") %></div>
        </div>
        <div class="task-description">
          <div class="text-label">Description</div>
          <div><%= task.description %></div>
        </div>
        <div class="task-status">
          <div class="text-label">Status</div>
          <div id="task-<%= task.id %>-status-content"><%= task.status %></div>
        </div>
        <div class="task-assignees">
          <div class="text-label">Assignees list</div>
          <div>
            <% task.assignees.each do |assignee| %>
              <%= assignee.name %>;
            <% end %>
          </div>
        </div>
        <div class="task-labels">
          <div class="text-label">Labels list</div>
          <div>
            <% task.labels.each do |label| %>
              <span class="badge"><%= label.name %></span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= link_to (content_tag(:button, 'Delete', class: 'btn btn-danger')), task, method: :delete,
                                                                                     data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
</div>
